@{
    Layout = null;
}

@using (Ajax.BeginForm("ChatRoomAuthenticate", new { Controller = "Home" },
    new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "chat" },
    new { id = "authenticateForm", @class = "form-horizontal", role = "form" }
))
{
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name">
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit">Send</button>
    </div>
}